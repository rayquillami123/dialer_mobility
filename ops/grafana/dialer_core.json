{
  "title": "Dialer Core",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Abandono ponderado (15m)",
      "gridPos": {"x":0,"y":0,"w":6,"h":4},
      "targets": [
        { "expr": "abandonment_weighted_pct{tenant_id=~\"$tenant\"}", "legendFormat": "tenant {{tenant_id}}"}
      ],
      "options": { "reduceOptions": {"calcs":["last"]}, "colorMode":"value" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "mode":"absolute", "steps":[{"color":"green","value":0},{"color":"orange","value":2},{"color":"red","value":3}]}
        }, "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Auto-Protección · Multiplier por campaña",
      "gridPos": {"x":6,"y":0,"w":18,"h":8},
      "targets": [
        { "expr": "autoprotect_multiplier{tenant_id=~\"$tenant\"}", "legendFormat":"campa {{campaign_id}}" }
      ],
      "fieldConfig": { "defaults": { "min": 0, "max": 1 } },
      "options": { "legend": { "showLegend": true } }
    },
    {
      "type": "timeseries",
      "title": "Conexiones WebSocket por tenant",
      "gridPos": {"x":0,"y":8,"w":12,"h":8},
      "targets": [
        { "expr": "ws_connections{tenant_id=~\"$tenant\"}", "legendFormat":"tenant {{tenant_id}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "API P95 Latency (s)",
      "gridPos": {"x":12,"y":8,"w":12,"h":8},
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat":"p95" }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "tenant",
        "type": "query",
        "datasource": "$DS_PROMETHEUS",
        "query": "label_values(ws_connections, tenant_id)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      }
    ]
  }
}
